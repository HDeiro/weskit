{
	"name": "weskit",
	"version": "3.0.0",
	"description": "A template for web pages development",
	"scripts": {
		"sass": "node-sass src/styles -o dist --output-style compressed",
		"sass:watch": "node-sass -w src/styles -o dist --output-style compressed",

		"assets:copy": "copy-assets src dist --exts=.json,.png,.jpg,.jpeg,.webp,.gif,.txt",
		"assets:optimize:json": "node -r esm ./scripts/minify-json.js",

		"scripts:copy": "copy-assets src dist --exts=.js",
		"scripts:optimize": "uglifyjs-folder dist --each --extension .js -o dist",
		"scripts:watch": "watch 'npm run scripts:copy' src/scripts --filter=./scripts/watch-filter-js.js --interval=1",

		"html:copy": "copy-assets src dist --exts=.html",
		"html:optimize": "html-minifier --file-ext html --input-dir ./dist --output-dir ./dist --collapse-whitespace --remove-comments --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true",
		"html:watch": "watch 'npm run html:copy' src --filter=./scripts/watch-filter-html.js --interval 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HDeiro/weskit.git"
	},
	"author": "Hugo Deir√≥ <hugodeiro@gmail.com> (hdeiro.github.io)",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/HDeiro/weskit/issues"
	},
	"homepage": "https://github.com/HDeiro/weskit#readme",
	"devDependencies": {
		"copy-assets": "1.0.3",
		"esm": "3.2.25",
		"glob": "8.0.3",
		"html-minifier": "4.0.0",
		"node-sass": "7.0.1",
		"uglifyjs-folder": "3.1.2",
		"watch": "1.0.2"
	}
}
